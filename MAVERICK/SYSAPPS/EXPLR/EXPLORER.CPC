// Explorer GUI program test


set/ actual_path = C:\CPCDOS\OS\MAVERICK

set/ DisplayMode = 0

ccp/ /set.level = 3
set/ Displaymode_ICO_Path = OS/MEDIA/GUI/btn_ico.PNG
set/ Displaymode_LIST_Path = OS/MEDIA/GUI/btn_list.PNG
ccp/ /set.level = 1



// ===== Build window =====
