// %actual_path%
Textbox/ txt_path
        .Handle         = "%window_handle%"
        .Parameters     = "BORD:1 COL:1"
        .Text           = ""
        .PX             = "64"
        .PY             = "2"
        .BackColor      = "110,110,110"
        .TextColor      = "250,250,250"
        .sx             = "370"
        .sy             = "18"
